<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ua.alevel.data.jpa.hibernate">
        <properties>
            <!-- JDBC Database connection settings -->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/module3_db?serverTimezone=UTC"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="ZaharValko031193"/>
            <!-- JDBC connection pool settings ... using built-in test pool -->
            <!--<property name="connection.pool_size">1</property>-->
            <!-- Select our SQL dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <!-- Echo the SQL to stdout -->
            <property name="hibernate.show_sql" value="true"/>
            <!-- Set the current session context -->
            <!--<property name="current_session_context_class">thread</property>-->
            <!-- Drop and re-create the database schema on startup -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- dbcp connection pool configuration -->
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
        </properties>
    </persistence-unit>
</persistence>